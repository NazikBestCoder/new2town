<div>
   <h1 class="text-3xl py-3 text-yellow-300 pb-12"><p hidden id='id-number'>{{profile.id}}</p>{{profile.username}}'s Profile</h1>
  
      <div class="pb-12">
         <img id="uploadedImage" style="width: 200px" src={{profile.photo_url}} id='img-preview'/>
         <label class='file-upload-container' for='file-upload'>
         <input id='file-upload' type='file' style='display:none;' />
         <button id="upload_widget" class="hover:border-blue-200 hover:bg-gray-50 rounded w-24 h-10 border-black border-2">Upload Pic</button>
         <br>
          Click here to save your new profile picture: 
        </label>
       <button id="photo-button" class="hover:border-blue-200 hover:bg-gray-50 rounded w-24 h-10 border-black border-2">Save</button>
       </div>
      
      
      
      <div class="pb-12">
        <label for='location'><strong>Location:</strong></label>
        <p>{{profile.location}}</p>
        <input
          type='location'
          placeholder='Enter a new city'
          id='location-update'
          class="form-input border p-3"
        />
        <button id="location-button" class="hover:border-blue-200 hover:bg-gray-50 rounded w-24 h-10 border-black border-2">Update</button>
      </div>
      <div class="pb-12">
        <label for='interests'><strong>Interests:</strong></label>
        <ol>
          {{#each profile.user_interests as |inter| }}
          <li>{{inter.name}}</li>
          {{/each}}
        </ol>
        <input class='form-input border p-3' placeholder="What do you like?" type='text' id='interests' name='interests' />
        <button id="interests-button" class="hover:border-blue-200 hover:bg-gray-50 rounded w-24 h-10 border-black border-2">Update</button>
      </div>
      <div class="pb-12"> 
        <label for='activities'><strong>Activities:</strong></label>
        <ol>
          {{#each profile.user_activities as |activ| }}
          <li>{{activ.name}}</li>
          {{/each}}
        </ol>
           
         <select id="activity-profile-bar" name="activity-search" class="mt-4 form-input border p-3">
         <option value="1">Stuff Your Face</option>
         <option value="2">Get Schwasted</option>
         <option value="3">Walk Around Trees</option>
         <option value="4">Get Competitive</option>
         </select>
         <button id="search-act" class="hover:border-blue-200 hover:bg-gray-50 rounded w-24 h-10 border-black border-2">Update</button>
      </div>


      <div class="pb-12">
        
        <label for='status'><strong>Status:</strong> </label>
        <p>{{profile.status}}</p>
        <input type='status' placeholder="Anything new?" id="status-update" class="form-input border p-3"/>
        <button id="status-button" class="hover:border-blue-200 hover:bg-gray-50 rounded w-24 h-10 border-black border-2">Update</button>
      </div>
      <div>
      </div>
  </div>

</div>
 <script src="https://upload-widget.cloudinary.com/global/all.js" type="text/javascript"></script>  

   <script type="text/javascript">
      const cloudName = "nazik"; // replace with your own cloud name
      const uploadPreset = "ytmjm1cb"; // replace with your own upload preset
      const myWidget = cloudinary.createUploadWidget(
        {
          cloudName: cloudName,
          uploadPreset: uploadPreset,
        },
          
        (error, result) => {
          if (!error && result && result.event === "success") {
            console.log("Done! Here is the image info: ", result.info);
            document.getElementById("uploadedImage").setAttribute("src", result.info.secure_url);
          }
        }
      );
      document.getElementById("upload_widget").addEventListener(
        "click",
        function () {
          myWidget.open();
        },
        false
      );
    </script>
<script src='/js/edit-profile.js'></script>



   