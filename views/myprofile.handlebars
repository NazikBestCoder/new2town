<div>
   <h1><span id='id-number'>{{id}}.) </span>My Profile</h1>
   <h3>Upload Avatar</h3>
   <button id="upload_widget" class="cloudinary-button">Upload files</button>
   <script src="https://upload-widget.cloudinary.com/global/all.js" type="text/javascript"></script>  

   <script type="text/javascript">
      const cloudName = "nazik"; // replace with your own cloud name
      const uploadPreset = "ytmjm1cb"; // replace with your own upload preset
      const myWidget = cloudinary.createUploadWidget(
        {
          cloudName: cloudName,
          uploadPreset: uploadPreset,
        },
          
        (error, result) => {
          if (!error && result && result.event === "success") {
            console.log("Done! Here is the image info: ", result.info);
            document.getElementById("uploadedimage").setAttribute("src", result.info.secure_url);
          }
        }
      );
      document.getElementById("upload_widget").addEventListener(
        "click",
        function () {
          myWidget.open();
        },
        false
      );
    </script>
      

    <form class='edit profile edit-profile-form'>
         <img src='https://via.placeholder.com/200' id='img-preview' />
         <label class='file-upload-container' for='file-upload'>
         <input id='file-upload' type='file' style='display:none;' />
          Select an Image
        </label>
       
      <div>
        <label for='name'>Full Name: {{username}}</label>
        <input type='text' />
      </div>
      <div>
        <label for='email-login'>Email: {{email}}</label>
        <input type='text' />
      </div>
      
      
      
      <div>
        <label for='location'>Update Location:</label>
        <input
          type='location'
          placeholder='{{location}}'
          id='location-update'
        />
        <button id="location-button">Submit</button>
      </div>
      <div>
        <label for='interests'>Interests:</label>
        <input class='form-input' type='text' id='interests' name='interests' />
      </div>
      <div>
        <label for='activities'>Activities:</label>
        <input
          class='form-input'
          type='text'
          id='activities'
          name='activities'
        />
      </div>
      <div>
        <label for='status'>Status: </label>
        <input type='status' placeholder="Anything new? {{status}}" id="status-update" />
        <button id="status-button">Submit</button>
      </div>
      <div>
        <button type='submit'>Save Profile Changes</button>
      </div>
    </form>
  </div>

</div>
<script src='/js/edit-profile.js'></script>



  