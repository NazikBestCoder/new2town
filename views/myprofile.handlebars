<div>
   <h1><span id='id-number'>{{profile.id}} .)  </span>My Profile</h1>
  
   <button id="upload_widget" class="cloudinary-button">Upload Profile Pic</button>
  
      

    <form class='edit profile edit-profile-form'>
         <img id="uploadedImage" style="width: 200px" src={{profile.photo_url}} id='img-preview' />
         <label class='file-upload-container' for='file-upload'>
         <input id='file-upload' type='file' style='display:none;' />
          Click here to save your new profile picture: 
        </label>
       <button id="photo-button">Submit</button>
           <div>
        <label for='name'>Full Name: {{profile.username}}</label>
        <input type='text' />
      </div>
      <div>
        <label for='email-login'>Email: {{profile.email}}</label>
        <input type='text' />
      </div>
      
      
      
      <div>
        <label for='location'>Update Location:</label>
        <input
          type='location'
          placeholder='{{profile.location}}'
          id='location-update'
        />
        <button id="location-button">Submit</button>
      </div>
      <div>
        <label for='interests'>Interests:</label>
        <p>
          {{#each profile.user_interests as |inter| }}
          {{inter.name}}
          {{/each}}
        </p>
        <input class='form-input' type='text' id='interests' name='interests' />
        <button id="interests-button">Submit</button>
      </div>
      <div>
        <label for='activities'>Activities:</label>
        <p>
          {{#each profile.user_activities as |activ| }}
          {{activ.name}}
          {{/each}}
        </p>
            <br>
            <select id="activity-profile-bar" name="activity-search" class="mt-4">
            <option value="1">Stuff Your Face</option>
            <option value="2">Get Schwasted</option>
            <option value="3">Walk Around Trees</option>
            <option value="4">Get Competitive</option>
            </select>
            <br>
             <button id="search-act" class="hover:border-blue-200 hover:bg-gray-50 rounded w-60 h-10 border-black border-2">Submit</button>
      </div>
      <div>
        <label for='status'>Status: </label>
        <p>{{profile.status}}</p>
        <input type='status' placeholder="Anything new?" id="status-update" />
        <button id="status-button">Submit</button>
      </div>
      <div>
      </div>
    </form>
  </div>

</div>
 <script src="https://upload-widget.cloudinary.com/global/all.js" type="text/javascript"></script>  

   <script type="text/javascript">
      const cloudName = "nazik"; // replace with your own cloud name
      const uploadPreset = "ytmjm1cb"; // replace with your own upload preset
      const myWidget = cloudinary.createUploadWidget(
        {
          cloudName: cloudName,
          uploadPreset: uploadPreset,

        },
          
        (error, result) => {
          if (!error && result && result.event === "success") {
            console.log("Done! Here is the image info: ", result.info);
            document.getElementById("uploadedImage").setAttribute("src", result.info.secure_url);

          }
        }
      );

      document.getElementById("upload_widget").addEventListener(
        "click",
        function () {
          myWidget.open();
        },
        false
      );
    </script>
<script src='/js/edit-profile.js'></script>




   