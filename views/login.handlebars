<div class="flex justify-around md:flex-nowrap lg: flex-wrap">
  <div class="col-md-6">

    <form class="form login-form container mx-auto">
      <h2 class="text-3xl p-8 text-yellow-300">Login</h2>
      <div class="form-group p-3">
        <label for="email-login" class="pr-11">Email:</label>
        <input class="form-input border pr-4" type="text" id="email-login" />
      </div>
      <div class="form-group p-3">
        <label for="password-login" class="pr-4">Password:</label>
        <input
          class="form-input border pr-4"
          type="password"
          id="password-login"
        />
      </div>
      <div class="form-group p-6">
        <button
          class="btn btn-primary hover:border-blue-200 hover:bg-gray-50 rounded w-60 h-10 border-black border-2"
          type="submit"
        >Login</button>
      </div>
    </form>
  </div>

  <div class="col-md-6">
    <form class="form signup-form container mx-auto">
      <h2 class="text-3xl p-8 text-yellow-300">Sign Up</h2>
      <div class="form-group p-3">
        <label for="name-signup" class="pr-11">Name:</label>
        <input class="form-input border pr-4" type="text" id="name-signup" />
      </div>
      <div class="form-group p-3">
        <label for="email-signup" class="pr-11">Email:</label>
        <input class="form-input border pr-4" type="text" id="email-signup" />
      </div> 
      <div class="form-group p-3">
        <label for="password-signup" class="pr-4">Password:</label>
        <input
          class="form-input border pr-4"
          type="password"
          id="password-signup"
        />
      </div>
      <div class="form-group p-3">
        <label for="location-signup" class="pr-4">Location:</label>
        <input
          class="form-input border pr-4"
          type="text"
          id="location-signup"
          placeholder="City Name"
        />
      </div>
      <div class="form-group p-6">
        <button
          class="btn btn-primary hover:border-blue-200 hover:bg-gray-50 rounded w-60 h-10 border-black border-2"
          type="submit"
        >Signup</button>
      </div>
    </form>
  </div>
</div>

<script src="/js/login.js"></script>