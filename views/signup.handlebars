<div class="flex justify-around md:flex-nowrap lg: flex-wrap">
<div class="col-md-6">

    <form class="form login-form container mx-auto">
      <h2 class="text-3xl p-8 text-yellow-300">Verify Your Info and Log In!</h2>
      <div class="form-group p-3">
        <label for="email-login" class="pr-11">Email:</label>
        <input class="form-input border pr-4" type="text" id="email-login" />
      </div>
      <div class="form-group p-3">
        <label for="password-login" class="pr-4">Password:</label>
        <input
          class="form-input border pr-4"
          type="password"
          id="password-login"
        />
      </div>
      <div class="form-group p-6">
        <button
          class="btn btn-primary hover:border-blue-200 hover:bg-gray-50 rounded w-60 h-10 border-black border-2"
          type="submit"
        >Login</button>
      </div>
    </form>
  </div>
</div>
