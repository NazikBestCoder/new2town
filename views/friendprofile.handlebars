<div>
   <h1 class="text-3xl py-3 text-yellow-300"><p hidden id='id-number'>{{profile.id}}</p> {{profile.username}}'s Profile</h1>
         <img id="uploadedImage" style="width: 200px" src={{profile.photo_url}} id='img-preview' />
     <br>
     
      <div class="pb-12">
        <p><strong>Status: </strong>{{profile.status}}</p>
      </div>

      <div class="pb-12">
        <p><strong>Email:</strong> <a href="mailto:{{profile.email}}" class="underline text-blue-600">{{profile.email}}</a></p>
      </div>
      
      
      
      <div class="pb-12">
        <p><strong>Location: </strong>{{profile.location}}</p>
      </div>
      <div class="pb-12">
        <p><strong>Interests:</strong></p>
        <ol>
          {{#each profile.user_interests as |inter| }}
          <li>{{inter.name}}</li>
          {{/each}}
        </ol>
      </div>
      <div class="pb-12">
        <p><strong>Activities:</strong></p>
        <ol>
          {{#each profile.user_activities as |activ| }}
          <li>{{activ.name}}</li>
          {{/each}}
        </ol>
      </div>



      <div>
      </div>
  </div>

</div>
 <script src="https://upload-widget.cloudinary.com/global/all.js" type="text/javascript"></script>  

   <script type="text/javascript">
      const cloudName = "nazik"; // replace with your own cloud name
      const uploadPreset = "ytmjm1cb"; // replace with your own upload preset
      const myWidget = cloudinary.createUploadWidget(
        {
          cloudName: cloudName,
          uploadPreset: uploadPreset,
        },
          
        (error, result) => {
          if (!error && result && result.event === "success") {
            console.log("Done! Here is the image info: ", result.info);
            document.getElementById("uploadedImage").setAttribute("src", result.info.secure_url);
          }
        }
      );
      document.getElementById("upload_widget").addEventListener(
        "click",
        function () {
          myWidget.open();
        },
        false
      );
    </script>
<script src='/js/edit-profile.js'></script>



   